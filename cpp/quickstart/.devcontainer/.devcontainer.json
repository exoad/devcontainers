// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.211.0/containers/cpp
{
	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick an Debian / Ubuntu OS version: debian-11, debian-10, debian-9, ubuntu-21.04, ubuntu-20.04, ubuntu-18.04
		// Use Debian 11, Debian 9, Ubuntu 18.04 or Ubuntu 21.04 on local arm64/Apple Silicon
		"args": { "VARIANT": "debian-9" }
	},
	"runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"],

	// Set *default* container specific settings.json values on container create.
	"settings": {},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-vscode.cpptools",
		"ms-vscode.cmake-tools",
		"jeff-hykin.better-dockerfile-syntax",
		"austin.code-gnu-global",
		"jeff-hykin.better-cpp-syntax",
		"ms-vscode.cpptools-extension-pack",
		"ms-vscode.cpptools-themes",
		"danielpinto8zz6.c-cpp-compile-run",
		"mitaki28.vscode-clang",
		"hars.cppsnippets",
		"franneck94.c-cpp-runner",
		"utsavm9.c-cpp-flag-debugging",
		"jbenden.c-cpp-flylint",
		"jaycetyle.vscode-gnu-global",
		"amiralizadeh9480.cpp-helper",
		"acharluk.easy-cpp-projects",
		"danielpinto8zz6.c-cpp-project-generator",
		"matepek.vscode-catch2-test-adapter",
		"davidbroetje.algorithm-mnemonics-vscode",
		"benjamin-simmonds.pythoncpp-debug",
		"kaysonwu.cpptask",
		"leojhonsong.ccpp-extension-pack",
		"nicolaspolomack.epitech-c-cpp-headers",
		"reloadedextensions.reloaded-cpp",
		"akiramiyakoda.cppincludeguard",
		"aztechcorps.aio-compiler",
		"adriano-markovic.c-cpp-makefile-project",
		"2211896472.snippets",
		"fleexo.cpp-class-creator",
		"thewolfs.cppcolorizationupgrade",
		"yyxhx.cpp-quick-start-snippet-for-beginners"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "gcc -v",

	// Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode",
	"features": {
		"docker-in-docker": "20.10",
		"docker-from-docker": "20.10",
		"kubectl-helm-minikube": "1.22",
		"terraform": "1.0",
		"git": "os-provided",
		"git-lfs": "latest",
		"github-cli": "latest",
		"azure-cli": "latest",
		"sshd": "latest",
		"desktop-lite": "latest",
		"homebrew": "latest",
		"node": "latest",
		"python": "os-provided",
		"golang": "1.17",
		"java": "latest",
		"maven": "3.8",
		"gradle": "7",
		"ruby": "3.0",
		"rust": "1.55",
		"powershell": "7.1",
		"dotnet": "6.0"
	}
}
